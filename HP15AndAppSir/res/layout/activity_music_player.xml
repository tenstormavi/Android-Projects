<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp15andapp.MusicPlayer" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="HP MUSIC PLAYER"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#CCCCCC"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/music" />

    <Button
        android:id="@+id/mpb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="46dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:drawableRight="@android:drawable/ic_media_play"
        android:text="PLAY" />

    <Button
        android:id="@+id/mpb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mpb1"
        android:layout_alignBottom="@+id/mpb1"
        android:layout_alignRight="@+id/imageView1"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:drawableRight="@android:drawable/ic_media_pause"
        android:text="PAUSE" />

    <SeekBar
        android:id="@+id/mpsb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/mpcd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mpsb1"
        android:layout_alignLeft="@+id/mpsb1"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/mptd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mpsb1"
        android:layout_alignParentRight="true"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
