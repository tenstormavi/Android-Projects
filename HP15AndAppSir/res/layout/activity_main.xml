<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp15andapp.MainActivity" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="HP Android APPLICATION"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fatv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="COUNTER : 0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fatv1"
        android:layout_centerHorizontal="true"
        android:drawableRight="@android:drawable/ic_input_add"
        android:layout_marginTop="35dp"
        android:text="INCREMENT" />

    <Button
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fab1"
        android:layout_centerVertical="true"
        android:drawableRight="@android:drawable/ic_delete"
        android:text="DECREMENT" />

    <Button
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab2"
        android:layout_centerHorizontal="true"
         android:drawableRight="@android:drawable/ic_input_delete"
        android:layout_marginTop="20dp"
        android:text="RESET COUNTER" />

    <Button
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:drawableRight="@android:drawable/btn_star_big_off"
        android:text="Activity LifeCycle" />

</RelativeLayout>
